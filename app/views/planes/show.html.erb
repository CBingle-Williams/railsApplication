<script>
    radius = parseInt('<%= @plane.range %>')
    function initMap() {
        var myLatLng = {lat: 51.331231, lng: 0.032755};

        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 4,
            center: myLatLng,
            disableDefaultUI: true
        });

        var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Hello World!'
        });

        var range = new google.maps.Circle({
            strokeColor: '#A9A9A9',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#000000',
            fillOpacity: 0.35,
            map: map,
            center: myLatLng,
            radius: radius * 1000
        });

        range.bindTo('center', marker, 'position');
        map.fitBounds(range.getBounds());
    }
</script>
